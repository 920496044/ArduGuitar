#!/usr/bin/python
# -*- coding: utf-8 -*-
"""
pyserial-test.py

"""
import serial

btPort = "/dev/rfcomm1"  #linvor
#btPort = "/dev/rfcomm0"  #bluesmirf
baudRate = 115200
readTimeout = 2 

data = ['02000',
        '02255',
        '100001225511255'
        ]

#dataBits = 1
#stopBits = 1
#parity = serial.PARITY_NONE

def main():
    ser = Serial(port=btPort,baudrate=baudRate,timeout=readTimeout)
    ser.open()
    i =0

    while(True):
        ser.write(data[i])
        something = True
        while (something):
            got = ser.read(6)
            something = (got.length > 0)
        i = i + 1 % data.length


if __name__ == '__main__':
    main()




